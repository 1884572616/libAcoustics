probes
{
    // Where to load it from
    libs ( "libsampling.so" );

    type            probes;

    // Name of the directory for probe data
    name            probes;

    // Write at same frequency as fields
    writeControl   timeStep;
    writeInterval  1;

    // Fields to be probed
    fields
    (
        pa
    );

    probeLocations
    (
        (0.0 0 1.0)
        (0 1 0)
        (-1 0 0)
        (1 0 0)
        (0.7 0.7 0)
        (0.7 -0.7 0)
    );
}
